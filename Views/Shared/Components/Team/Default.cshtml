@model IEnumerable<Teams>
<a class="btn btn-block  @(ViewBag.SelectedTeam == null ? "btn-primary" : "btn-outline-secondary")" asp-action="Index" asp-controller="Home" asp-route-teamid=""> Home</a>

<br />
@foreach (var x in Model)
{<!-- deciding if button should be highlighted based on if it is selected-->
                <a class="btn btn-block @(x.TeamName == ViewBag.SelectedTeam ? "btn-primary": "btn-outline-secondary")" asp-action="Index" asp-controller="Home" asp-route-teamid="@x.TeamId" asp-route-teamname="@x.TeamName"> @x.TeamName</a>
                                <br />
}